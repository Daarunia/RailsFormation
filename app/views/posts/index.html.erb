<%# List of post %>
<h1>Articles</h1>

<% @posts.each do |post| %>
    <p><%= post.title %></p>
    <p>
        <a href="<%= post_path(post.id) %>" class="btn btn-primary">Lire la suite</a>
        <a href="<%= edit_post_path(post.id) %>" class="btn btn-default">Modifier</a>
        <%= form_with(model: @article, url: post_path(post.id), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet article ?" }) do |form| %>
            <%= form.submit "Supprimer", class: "btn btn-danger" %>
        <% end %>
    </p>
<% end %>
<p>
    <a href="<%=new_post_path%>" class="btn btn-success">Nouvel article</a>
</p>